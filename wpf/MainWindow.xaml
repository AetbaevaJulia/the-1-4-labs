<Window x:Class="wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf"
        mc:Ignorable="d"
        Title="Калькулятор ОПЗ" Height="370" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="175*"/>
            <RowDefinition Height="354*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="211*"/>
            <ColumnDefinition Width="189*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbForInput" TextWrapping="Wrap" Margin="224,53,0,16" TextChanged="TextBox_TextChanged" HorizontalAlignment="Left" Width="352" Grid.ColumnSpan="2" TextAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="btForCalculate" Content="Посчитать" Margin="178,53,0,16" Click="BtForCalculateClick" HorizontalAlignment="Left" Width="90" Grid.Column="1"/>
        <Label Content="Введите выражение:" Margin="54,53,0,16" HorizontalAlignment="Left"/>
        <Label Content="Результат:" Margin="132,115,0,175" HorizontalAlignment="Left" Background="{x:Null}" Grid.RowSpan="2"/>
        <Label x:Name="lbOutput" Content="" Margin="224,115,0,175" HorizontalAlignment="Left" Width="352" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

    </Grid>
</Window>
